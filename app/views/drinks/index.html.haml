.main
  %h1.page-header Drinks
  =link_to 'Create New Drink', new_drink_path, class: 'btn btn-primary btn-lg'
  .table-responsive
    %table.table.table-striped
      %thead
        %tr
          %th #
          %th Name
          %th Drink Category
          %th
          %th
      %tbody
        -@paginated_drinks.each do |drink|
          %tr
            %td
            %td= drink.name
            %td= drink.drink_category.name
            %td=link_to 'Edit', edit_drink_path(drink), class: 'btn btn-primary btn-sm'
            %td
              =button_to "Delete", { action: "destroy", id: drink.id },  class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: "Are you sure?" }
  = paginate @paginated_drinks
